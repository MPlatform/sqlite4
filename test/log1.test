do_filesize_test 9.5   16384 139

do_test 9.6 {
  copy_db_files test.db test.db2
  sqlite4 db2 ./test.db2
  execsql { SELECT count(*) FROM x ; PRAGMA integrity_check } db2
} {6 ok}

catch { db2 close }

